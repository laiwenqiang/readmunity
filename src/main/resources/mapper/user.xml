<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.readmunity.mapper.UserMapper">
    <select id="selectUserById" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT * from user WHERE id = #{id}
    </select>
    
    <select id="getUserByUsername" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="getUserByEmail" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT username, email FROM user WHERE email = #{email}
    </select>
    
    <insert id="insertUser" parameterType="Map">
        INSERT INTO user (username, email, password) VALUES (#{username}, #{email}, #{password})
    </insert>

    <insert id="insert" parameterType="com.readmunity.entity.User" >
        INSERT INTO user (username, email, password,validateCode) VALUES (#{username}, #{email}, #{password},#{validateCode})
    </insert>
    
    <update id="updateByName" parameterType="com.readmunity.entity.User">
        UPDATE USER
        <set>
            username=#{username}
            <if test="password != null">,password=#{password}</if>
            <if test="avatar != null">,avatar=#{avatar}</if>
            <if test="email != null">,email=#{email}</if>
            <if test="address!= null">,address=#{address}</if>
            <if test="bio != null">,bio=#{bio}</if>
        </set>
        WHERE username=#{username}
    </update>

    <cache/>

</mapper>
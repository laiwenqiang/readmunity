<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.readmunity.mapper.UserMapper">

    <select id="getUserByUsername" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT * FROM user WHERE username = #{username}
    </select>

    <select id="getUserByEmail" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT username, email, status, validateCode, registerTime,resetPassTime FROM user WHERE email = #{email}
    </select>

    <select id="getUserList" parameterType="String" resultType="com.readmunity.entity.User">
        SELECT * FROM user ${value}
    </select>

    <insert id="insertUser" parameterType="Map">
        INSERT INTO user (username, email, password) VALUES (#{username}, #{email}, #{password})
    </insert>

    <insert id="insert" parameterType="com.readmunity.entity.User">
        INSERT INTO user (username, email, password,validateCode,registerTime,resetPassTime) VALUES (#{username}, #{email}, #{password},#{validateCode},#{registerTime},#{resetPassTime})
    </insert>

    <update id="updateByName" parameterType="com.readmunity.entity.User">
        UPDATE USER
        <set>
            username=#{username}
            <if test="password != null">,password=#{password}</if>
            <if test="avatar != null">,avatar=#{avatar}</if>
            <if test="email != null">,email=#{email}</if>
            <if test="address!= null">,address=#{address}</if>
            <if test="bio != null">,bio=#{bio}</if>
        </set>
        WHERE username=#{username}
    </update>

    <update id="updateUserByEmail" parameterType="com.readmunity.entity.User">
        UPDATE USER
        <set>
            email=#{email}
            <if test="username != null">,username=#{username}</if>
            <if test="password != null">,password=#{password}</if>
            <if test="avatar != null">,avatar=#{avatar}</if>
            <if test="address!= null">,address=#{address}</if>
            <if test="bio != null">,bio=#{bio}</if>
            <if test="status != null">,status=#{status}</if>
            <if test="validateCode != null">,validateCode=#{validateCode}</if>
            <if test="registerTime != null">,registerTime=#{registerTime}</if>
            <if test="resetPassTime != null">,resetPassTime=#{resetPassTime}</if>
        </set>
        WHERE email=#{email}
    </update>

    <!--<cache/>-->

</mapper>